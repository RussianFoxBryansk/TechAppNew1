<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- oval создаёт идеальный круг -->

    <!-- Цвет заливки (прозрачный) -->
    <solid android:color="@android:color/transparent"/>

    <!-- Граница (опционально) -->
    <stroke
        android:width="1dp"
        android:color="?attr/colorPrimary"/> <!-- Цвет из темы -->

    <!-- Размер (если нужно) -->
    <size
        android:width="200dp"
        android:height="200dp"/>
</shape>