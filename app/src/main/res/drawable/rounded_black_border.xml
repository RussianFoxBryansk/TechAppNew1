<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Чёрная граница толщиной 1dp -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Закругление углов (можно настроить радиус по желанию) -->
    <corners
        android:radius="12dp" />

    <!-- Прозрачный фон (можно заменить на любой цвет) -->
    <solid
        android:color="#00000000" />

    <!-- Отступы, чтобы граница не обрезалась -->
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />
</shape>