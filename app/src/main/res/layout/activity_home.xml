<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"

    android:background="?attr/appBackground">

    <!-- Поисковая строка -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/searchLayout"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:boxCornerRadiusTopStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxStrokeColor="#33000000"
        app:boxStrokeWidth="1dp"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="#808080">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Поиск"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Список корпусов -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/buildingsRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:layout_below="@id/searchLayout"
        android:padding="8dp"/>

    <!-- Кнопка добавления -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNav"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:contentDescription="Добавить новую проблему"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/white" />

    <!-- Нижняя навигация -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@drawable/bottom_nav"
        app:itemTextColor="@color/checkT"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />
    <include layout="@layout/skelet"
        android:id="@+id/skeletonContainer"
        android:visibility="gone"/>
</RelativeLayout>